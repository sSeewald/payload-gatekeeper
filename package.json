{
  "name": "payload-gatekeeper",
  "version": "1.0.0",
  "description": "The ultimate access control gatekeeper for Payload CMS v3 - Advanced RBAC with wildcard support, auto role assignment, and flexible configuration",
  "type": "module",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "types": "dist/esm/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js"
    },
    "./components/*": {
      "import": "./dist/esm/components/*.js",
      "require": "./dist/cjs/components/*.js"
    },
    "./package.json": "./package.json"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig.esm.json && tsc -p tsconfig.cjs.json",
    "dev": "tsc -p tsconfig.esm.json --watch",
    "build:watch": "tsc --watch",
    "clean": "rimraf dist",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src",
    "lint:fix": "eslint --fix --ext .ts,.tsx src",
    "type-check": "tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run clean && npm run lint && npm test && npm run build",
    "prepare": "npm run build"
  },
  "keywords": [
    "payload",
    "payload-cms",
    "payload-plugin",
    "gatekeeper",
    "access-control",
    "permissions",
    "rbac",
    "role-based-access-control",
    "authentication",
    "authorization",
    "security",
    "roles",
    "wildcard-permissions",
    "payload-v3",
    "guardian",
    "access-management"
  ],
  "author": "Sascha Seewald",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sSeewald/payload-gatekeeper.git"
  },
  "bugs": {
    "url": "https://github.com/sSeewald/payload-gatekeeper/issues"
  },
  "homepage": "https://github.com/sSeewald/payload-gatekeeper#readme",
  "peerDependencies": {
    "@payloadcms/ui": ">=3.0.0 <4.0.0",
    "payload": ">=3.0.0 <4.0.0",
    "react": ">=19.0.0 <20.0.0"
  },
  "dependencies": {
    "react-select": "^5.8.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@testing-library/jest-dom": "^6.7.0",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.0",
    "@types/react": "^19.0.0",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "eslint": "^9.33.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "glob": "^11.0.3",
    "globals": "^16.3.0",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "prettier": "^3.6.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.1",
    "typescript": "^5.9.2"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
